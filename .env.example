# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/ainspect
POSTGRES_DB=ainspect
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# Redis
REDIS_URL=redis://localhost:6379

# Session & JWT Secrets (REQUIRED)
SESSION_SECRET=your-super-secure-session-secret-key-change-in-production
JWT_SECRET=your-super-secure-jwt-secret-key-change-in-production
CONTRACTOR_JWT_SECRET=your-contractor-jwt-secret-key-change-in-production

# API Keys
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
STRIPE_SECRET_KEY=your-stripe-secret-key
SENDGRID_API_KEY=your-sendgrid-api-key

# Google Cloud Storage
GOOGLE_CLOUD_STORAGE_BUCKET=your-storage-bucket-name
GOOGLE_CLOUD_STORAGE_BASE_URL=https://storage.googleapis.com

# Third-party APIs
ELITE_MGA_API_URL=https://api.elitemga.com/v1
ELITE_MGA_API_KEY=your-elite-mga-api-key

# Email Configuration
SUPPORT_EMAIL=support@yourdomain.com
NOREPLY_EMAIL=noreply@yourdomain.com
ADMIN_EMAIL=admin@yourdomain.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# Google OAuth
GOOGLE_REDIRECT_URI=https://yourdomain.com/api/calendar/google/callback

# App Configuration
NODE_ENV=production
ALLOWED_ORIGINS=https://your-frontend-domain.com,https://www.your-frontend-domain.com
GENERAL_RATE_LIMIT=1000
API_RATE_LIMIT=100

# Logging
LOG_LEVEL=info

# Development
REPLIT_DEV_DOMAIN=https://yourdomain.com
